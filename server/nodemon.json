{
    "restartable": "rs",
    "script": "server.js",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "logs/**"
    ],
    "verbose": true,
    "nodeArgs": [
        "--inspect"
    ],
    "execMap": {
        "js": "node"
    },
    "watch": [
        ".env",
        "server.js",
        "api/",
        "lib/",
        "config/"
    ],
    "ext": "js json html"
}